            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="2-------------------"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="3-------------------"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="4-------------------"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="5-------------------"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="6-------------------"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="7-------------------"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="8-------------------"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:text="9-------------------"/>


        </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>
